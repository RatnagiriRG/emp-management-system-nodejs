# Environment Configuration
NODE_ENV=production
PORT=10000

# MongoDB Configuration (Replace with your MongoDB Atlas URI)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/employee_management

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-production-jwt-secret-make-it-very-strong-and-random
JWT_EXPIRE=24h
REFRESH_TOKEN_EXPIRE=7d

# CORS Configuration (Add your frontend domain)
ALLOWED_ORIGINS=https://yourfrontend.com,https://employee-mgmt.netlify.app

# Application Configuration
APP_NAME=Employee Management System
API_VERSION=1.0.0
